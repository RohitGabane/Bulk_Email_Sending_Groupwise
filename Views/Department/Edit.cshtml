
 @model Bulk_Email_Sending_Groupwise.Models.Department

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <h1>Edit Department</h1>

    <div class="row">
        <div class="col-md-6">
            <h4>Department</h4>
            <hr />
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Dept_Id" />
                <div class="form-group">
                    <label asp-for="Dept_Name" class="control-label"></label>
                    <input asp-for="Dept_Name" class="form-control" />
                    <span asp-validation-for="Dept_Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" onclick="onsuccessclick()" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script>
    function onsuccessclick() {
        alert("Update successfully");
    }
</script>